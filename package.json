{
  "name": "claude-code-monitor",
  "version": "1.0.0",
  "description": "A beautiful macOS menu bar app for real-time Claude Code usage monitoring",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production && tsc main.ts preload.ts --outDir dist",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on dist/bundle.js && electron .\"",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder"
  },
  "keywords": ["electron", "claude-code", "usage-monitor", "macos", "menu-bar", "ai", "tokens"],
  "author": "Claude Code",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^24.0.3",
    "concurrently": "^9.1.2",
    "css-loader": "^7.1.2",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.3",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "autoprefixer": "^10.4.21",
    "ccusage": "^13.0.1",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
