{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "outDir": "./dist",
    "noEmit": false,
    "jsx": "preserve",
    "moduleResolution": "bundler"
  },
  "include": [
    "main.ts",
    "src/services/**/*.ts",
    "src/types/**/*.ts"
  ],
  "exclude": [
    "src/components/**/*",
    "src/index.tsx",
    "src/App.tsx",
    "node_modules",
    "dist"
  ]
}